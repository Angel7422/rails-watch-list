<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://unsplash.com/fr/photos/red-cinema-chair-evlkOfkQ5rE')">
    <h1> <%= @list.name %> </h1>
    <%#= link_to 'Add List', new_list_path, class: 'btn btn-gradient' %>
  </div>

      <div class="list-group">
        <% @list.movies.each do |movie| %>
        <div class="card-movie-1">
          <div class="list-group-card">
            <img src="https://source.unsplash.com/1600x900/?movie" alt="movie" class="card-img">
           <!-- <li class="list-group-item"><%#= movie.poster_url class: 'card-img'%></li>-->
            <li class="list-group-item">
             <%= link_to movie_path(movie), data: {turbo_method: :delete, turbo_confirm: "You will remove your movie list. \n Are you sure ?"} do %>
              <i class="fa-solid fa-trash btn btn-outline-secondary mt-4 mb-2"></i>
              <% end %>
              <%= movie.title %>
              <%= movie.rating %>
            </li>
            <li class="list-group-item"><%= movie.overview %></li>
          </div>
        </div>
        <% end %>
      </div>



    <!-- Button section -->
    <div class="d-flex gap-3 align-items-center justify-content-end">
       <%= link_to new_list_bookmark_path(@list) do %>
        <i class="fa-solid fa-square-plus btn btn-outline-secondary mt-4 mb-2"></i>
      <% end %>
      <%= link_to edit_list_path(@list) do %>
        <i class="fa-solid fa-pencil btn btn-outline-secondary mt-4 mb-2"></i>
      <% end %>
      <%= link_to list_path(@list), data: {turbo_method: :delete, turbo_confirm: "You will remove your movie list. \n Are you sure ? "} do %>
        <i class="fa-solid fa-trash btn btn-outline-secondary mt-4 mb-2"></i>
      <% end %>
      <%= link_to lists_path do %>
        <i class="fa-solid fa-backward-step btn btn-outline-secondary mt-4 mb-2"></i>
        <% end %>
    </div>
</div>



